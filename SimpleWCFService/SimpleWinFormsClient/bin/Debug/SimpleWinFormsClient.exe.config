<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <system.serviceModel>
        <bindings>
            <wsHttpBinding>
              <binding name="SecurityBinding">
                <security mode="Message">
                  <message clientCredentialType="Certificate"/>
                </security>
              </binding>
            </wsHttpBinding>
        </bindings>
        <client>
          <endpoint address="http://localhost:8733/Design_Time_Addresses/SimpleWCFService/Service1/"
              binding="wsHttpBinding" bindingConfiguration="SecurityBinding" behaviorConfiguration="SecurityBehavior"
              contract="ServiceReference1.IService1" name="BasicHttpBinding_IService1" >
            <identity>
              <dns value="ServerCert" />
            </identity>
          </endpoint>
        </client>
      <behaviors>
        <endpointBehaviors>
          <behavior name="SecurityBehavior">
            <clientCredentials>
              <serviceCertificate>
                <authentication certificateValidationMode="PeerTrust"/>
              </serviceCertificate>
            </clientCredentials>
          </behavior>
        </endpointBehaviors>
      </behaviors>
    </system.serviceModel>
</configuration>